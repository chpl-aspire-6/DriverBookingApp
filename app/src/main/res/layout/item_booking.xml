<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_1sdp">


        <LinearLayout
            android:id="@+id/linear_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPurplePrimary_Light"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lin_StatusHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="5"
                android:background="@color/colorPurplePrimary_LightBG"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="start"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/txt_req_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="start"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/txt_Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Request"
                        android:textColor="@color/colorPurplePrimary"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
<!--            SecondPart-->
        <LinearLayout
            android:id="@+id/lin_Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPurplePrimary_Light"
            android:orientation="vertical">
            <!--Cab Profile -->
            <LinearLayout
                android:id="@+id/lin_CabProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Driver Profile -->
                <RelativeLayout
                    android:id="@+id/rel_lyt_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/iv_profile_photo"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/ic_male_img"
                        app:civ_border="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        app:civ_shadow_radius="0dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txt_PersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_toEndOf="@id/iv_profile_photo"
                        android:text="Jainil Patel"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_MobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_PersonName"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:layout_toEndOf="@id/iv_profile_photo"
                        android:text="123654789"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                </RelativeLayout>
                <!--Car Number-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/vector_person" />

                    <TextView
                        android:id="@+id/txtPeopleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="2 People"
                        android:textColor="@color/colorPurplePrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/Gray"></View>
            <!--Location Info-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Left Side Information -->
                    <LinearLayout
                        android:id="@+id/lin_FromANDToDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_FromDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_11ssp"
                            app:fontName="sf_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="-"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txt_FromLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="Makarba"
                            android:textColor="@color/grey_80"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <!-- Right Side Information -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="-"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txt_ToLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="Vastrapur"
                            android:textColor="@color/grey_80"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Date and Time Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Left Side Information -->
                    <LinearLayout
                        android:id="@+id/lin_DateInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_DateDetailTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="-"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txt_DateDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="5 April 2024"
                            android:textColor="@color/grey_80"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <!-- Right Side Information -->
                    <LinearLayout
                        android:id="@+id/lin_timeInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_timeDetailTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/txt_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="-"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/txt_timeDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="3 PM"
                            android:textColor="@color/grey_80"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>
                </LinearLayout>

            <!-- Amount Layout -->
                <LinearLayout
                    android:id="@+id/lin_AmountDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Left Side Information -->
                    <LinearLayout
                        android:id="@+id/lin_AgentAmountInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_AgentAmountDetailTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company Amt:"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_11ssp" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginStart="@dimen/_3sdp"-->
<!--                            android:text="-"-->
<!--                            android:textColor="@color/Black" />-->

                        <TextView
                            android:id="@+id/txt_AgentAmountDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="5000"
                            android:textColor="@color/grey_80"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <!-- Right Side Information -->
                    <LinearLayout
                        android:id="@+id/lin_CustomerInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_CustomerDetailTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Amt:"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_11ssp" />

<!--                        <TextView-->
<!--                            android:id="@+id/txt_1"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginStart="@dimen/_3sdp"-->
<!--                            android:text="-"-->
<!--                            android:textColor="@color/Black" />-->

                        <TextView
                            android:id="@+id/txt_CustomerDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="300"
                            android:textColor="@color/grey_80"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>



            <!-- Bottom Layout-->

            <LinearLayout
                android:id="@+id/lin_Accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

<!--                accept part-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lin_accept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:visibility="visible"
                        android:background="@drawable/accept_bg"
                        android:padding="@dimen/_3sdp">

                        <TextView
                            android:id="@+id/txtAccept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Accept"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

<!--reject part-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible">


                    <LinearLayout
                        android:id="@+id/lin_Reject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/decline_bg"
                        android:padding="@dimen/_3sdp">

                        <TextView
                            android:id="@+id/txtReject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Reject"
                            android:textAlignment="center"
                            android:textColor="@color/colorRedPrimary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

<!--                pick and drop part-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
<!--PickUP part-->
                <LinearLayout
                    android:id="@+id/lin_PickUP"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/pickup_bg"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtPickUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/pick_up"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

<!--                Drop layout -->
                  <LinearLayout
                    android:id="@+id/lin_Drop"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:padding="@dimen/_5sdp"
                    android:background="@drawable/pickup_bg"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtDrop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Drop"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                </LinearLayout>



</LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>