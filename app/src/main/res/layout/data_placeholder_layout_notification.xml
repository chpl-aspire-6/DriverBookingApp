<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/cIV"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:background="@color/background"
                    android:src="@drawable/logo_trans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/cIV"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="NestedWeights,UselessParent">

                        <View
                            android:id="@+id/notification_title"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_weight="9"
                            android:background="@color/background"
                            android:gravity="center_vertical"
                            android:text="@string/notification_title"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/notification_delete"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@color/background" />
                    </LinearLayout>

                    <View
                        android:id="@+id/notification_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@color/background"
                        android:gravity="start"
                        android:maxLength="140"
                        android:text="@string/notification_description_is_here_display_with_small_text_size_and_with_some_fascinating_font_thnak_you"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>